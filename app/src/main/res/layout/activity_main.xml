<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loginBtn_main"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/login"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/vertical2_main_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/vertical1_main_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal1_main_guideline" />

    <Button
        android:id="@+id/signUpBtn_main"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/sign_up"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal2_main_guideline"
        app:layout_constraintEnd_toStartOf="@+id/vertical2_main_guideline"
        app:layout_constraintStart_toStartOf="@+id/vertical1_main_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal1_main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal2_main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical1_main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical2_main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>